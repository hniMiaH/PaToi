@model Pet_Shop2.Models.Role
@{
    ViewData["Title"] = "Chỉnh sửa";
    Layout = "~/Areas/Admin/views/shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label">Tên vai trò</label>
                @*<input asp-for="RoleName" class="form-control" />*@
                @Html.TextBoxFor(x=>x.RoleName,new {@class="form-control",value=Model.RoleName})
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Mô tả</label>
                @Html.TextBoxFor(x=>x.Description,new {@class="form-control",@value=Model.Description})
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-warning">Chỉnh sửa</button>
                <a class="btn btn-default" href="Index">Quay lại</a>
            </div>
        </form>
    </div>
</div>