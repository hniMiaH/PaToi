
@using Microsoft.AspNetCore.Identity;
@using Pet_Shop2.Models;
@model Role

@{
    ViewData["Title"] = "Thêm mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label">Tên vai trò</label>
               
                @Html.TextBoxFor(x=>x.RoleName,new {@class="form-control"})
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Mô tả</label>
                @Html.TextBoxFor(x=>x.Description,new {@class="form-control"})
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-success">Thêm mới</button>
                <a class="btn btn-default" href="Index">Quay lại</a>
            </div>
        </form>
    </div>
</div>



